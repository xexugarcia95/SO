#include <stdio.h>
#include <signal.h>

 static int i;
 static int contadores[31];
 static void handler (int i)
 {
	contadores[i]++;
	printf("\n La se√±al %d, se ha realizado %d veces",i,contadores[i]);   
 }

 int main()
 {
	struct sigaction sa;
	sa.sa_handler = handler;
	sigemptyset(&sa.sa_mask);

  	sa.sa_flags=SA_RESTART;
	int contadores[31];
	for(i=1;i<=31;i++)
	{
		contadores[i]=0;
	}
	int j;
	do{
	for(j=1;j<=60;j++)
	{
		if(sigaction(i,&sa,NULL)==-1){
			printf("Error en el manejador");
		}
	}
	}while(1);
 }
